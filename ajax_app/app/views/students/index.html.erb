<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Cource</th>
      <th>Age</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.address %></td>
        <td><%= student.cource %></td>
        <td><%= student.age %></td>
        <td><%= link_to 'Show', student, remote: true %></td>
        <td><%= link_to 'Edit', edit_student_path(student), remote: true %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path, remote: true, data: {toggle:  "modal", target: '#modal-window', class: 'btn btn-primary btn-lg'} %>


<div id="modal-window" class="modal fade" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content"></div>
  </div>
</div>